# Gemfile
source "https://rubygems.org"

# Specify Jekyll version recommended or compatible with GitHub Pages
# Check https://pages.github.com/versions/ for current versions if needed
gem "jekyll", "~> 3.9" # Sticking to version often used by GitHub Pages default builds for simplicity
                        # You can often use newer versions, but this is safe

# Specify the theme gem
gem "minima", "~> 2.5"

# Specify standard plugins often used by themes/GitHub Pages
gem "jekyll-feed", "~> 0.15"

# Include other plugins used by Minima or potentially useful ones
# gem "jekyll-seo-tag", "~> 2.6" # Optional: Helps with SEO meta tags

# Group for GitHub Pages dependency management (good practice)
group :jekyll_plugins do
  gem "jekyll-remote-theme" # Allows using themes hosted on GitHub directly if needed later
end